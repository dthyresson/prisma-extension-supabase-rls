{
  // "include": ["**/*.ts", "**/*.tsx"],
  // "exclude": ["node_modules"],

  "compilerOptions": {
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "module": "node16",
    "target": "ES2020",
    "lib": ["es6", "esnext", "es2015", "dom"],
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/dist", "**/temp"]
}
